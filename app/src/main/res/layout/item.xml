            android:textSize="20sp"
            android:fontFamily="@font/sourcesanspro_semibold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

