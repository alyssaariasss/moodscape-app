<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".register">

    <ImageView
        android:id="@+id/moodscape_ls"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="107dp"
        android:contentDescription="@string/loginD"
        app:srcCompat="@drawable/moodscape_ls"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="248dp"
        android:layout_height="220dp"
        android:layout_below="@+id/moodscape_ls"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="75dp"
        android:contentDescription="@string/get_started_intro"
        app:srcCompat="@drawable/undraw_online_ad" />

    <RelativeLayout
        android:id="@+id/inputRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginStart="-72dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-72dp">

        <LinearLayout
            android:id="@+id/inputLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/round_btn2"
                android:ems="10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:hint="@string/firstname"
                android:inputType="textPersonName"
                android:paddingStart="25dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="2dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="25sp"
                android:autofillHints="name"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/LastName"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/round_btn2"
                android:ems="10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:hint="@string/lastname"
                android:inputType="textPersonName"
                android:paddingStart="25dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="2dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="25sp"
                android:autofillHints="name"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/Age"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/round_btn2"
                android:ems="10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:hint="@string/age"
                android:inputType="number"
                android:paddingStart="25dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="2dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="25sp"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/Email1"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/round_btn2"
                android:ems="10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="25dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="2dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="25sp"
                android:autofillHints="name"
                tools:ignore="TextContrastCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:ems="10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Password1"
                    android:layout_width="450dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:hint="@string/password"
                    android:textColorHint="@color/dark_gray"
                    android:background="@drawable/round_btn2"
                    android:inputType="textPassword"
                    android:paddingStart="25dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="2dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/SignUpBtn"
                android:layout_width="450dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_btn3"
                android:elevation="5dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="2dp"
                android:paddingRight="16dp"
                android:paddingBottom="2dp"
                android:stateListAnimator="@null"
                android:text="@string/sign_up"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:backgroundTint="@color/dark_pink"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
