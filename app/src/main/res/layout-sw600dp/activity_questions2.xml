<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/question2_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Where are you right now?"
                android:textColor="#4A5759"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/question2_tagline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="At home? school? ..."
                android:textColor="#4A5759"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/question2_where"
                app:layout_constraintTop_toBottomOf="@+id/question2_where" />

            <EditText
                android:id="@+id/question2_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/round_btn3"
                android:backgroundTint="@color/light_gray"
                android:ems="10"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:hint="Write your answers here..."
                android:inputType="textMultiLine"
                android:lineSpacingExtra="8sp"
                android:lines="3"
                android:overScrollMode="always"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question2_tagline1" />

            <TextView
                android:id="@+id/question2_who"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Who are you with?"
                android:textColor="#4A5759"
                android:textSize="26sp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question2_1" />

            <TextView
                android:id="@+id/question2_tagline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="Family? Friends? ..."
                android:textColor="#4A5759"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/question2_who"
                app:layout_constraintTop_toBottomOf="@+id/question2_who" />

            <EditText
                android:id="@+id/question2_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/round_btn3"
                android:backgroundTint="@color/light_gray"
                android:ems="10"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:hint="Write your answers here..."
                android:inputType="textMultiLine"
                android:lineSpacingExtra="8sp"
                android:lines="3"
                android:overScrollMode="always"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question2_tagline2" />

            <LinearLayout
                android:id="@+id/q2Linear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="140dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question2_2">

                <Button
                    android:id="@+id/backbtn2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn3"
                    android:elevation="5dp"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:stateListAnimator="@null"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    app:backgroundTint="@color/canary" />


                <Button
                    android:id="@+id/nextbtn2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_btn3"
                    android:elevation="5dp"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:stateListAnimator="@null"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    app:backgroundTint="@color/dark_pink" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/q2Linear"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>