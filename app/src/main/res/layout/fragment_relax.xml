<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_relax">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="85dp"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Providing Relaxation"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textSize="24sp"
                android:textColor="@color/dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/relax1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/dirty_cream"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fragment_title"
                app:layout_constraintVertical_bias="0.160">

                <LinearLayout
                    android:id="@+id/linearLayoutMC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/relax1"
                    app:layout_constraintEnd_toEndOf="@+id/relax1"
                    app:layout_constraintStart_toStartOf="@+id/relax1"
                    app:layout_constraintTop_toTopOf="@+id/relax1">

                    <ImageView
                        android:id="@+id/relax1_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/relax_music" />

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/relax1_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sourcesanspro_bold"
                            android:text="Listen to Music"
                            android:textColor="@color/dark_gray"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/anxiety1_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="It makes you feel soothed and good. Give yourself some time to relax with good music."
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_forward" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/relax2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="125dp"
                android:backgroundTint="@color/dirty_cream"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@+id/relax1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/relax1"
                app:layout_constraintTop_toTopOf="@+id/relax1">

                <LinearLayout
                    android:id="@+id/linearLayoutMC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/relax2"
                    app:layout_constraintEnd_toEndOf="@+id/relax2"
                    app:layout_constraintStart_toStartOf="@+id/relax2"
                    app:layout_constraintTop_toTopOf="@+id/relax2" >

                    <ImageView
                        android:id="@+id/relax2_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/relax_exer"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"/>

                    <LinearLayout
                        android:layout_marginStart="15dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/relax2_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Muscle Exercise"
                            android:fontFamily="@font/sourcesanspro_bold"
                            android:textColor="@color/dark_gray"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/anxiety2_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Releasing tensions from your muscles. Empty your mind and allow your body \nto get some rest."
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_forward"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--    Dummy view to prevent cutoff at the bottom         -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintTop_toBottomOf="@+id/relax2"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>