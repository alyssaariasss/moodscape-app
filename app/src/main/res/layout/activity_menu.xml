<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".menu">

    <ImageButton
        android:id="@+id/menu_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/Hello_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/sourcesanspro_bold"
        android:text="Hello User"
        android:textColor="#4A5759"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/menu_arrow_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:text="Assess yourself now and meditate later."
        android:textColor="#4A5759"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/Hello_User"
        app:layout_constraintTop_toTopOf="@+id/Hello_User" />

    <TextView
        android:id="@+id/dash_lines"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/dash_lines"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mood_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/menu_choice_button"
        android:fontFamily="@font/sourcesanspro_regular"
        app:backgroundTint="@color/dirty_cream"
        android:elevation="25dp"
        android:text="how are you\nfeeling today?"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:textAlignment="textStart"
        android:textColor="#4A5759"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dash_lines"
        android:textAllCaps="false"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/goals_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/menu_choice_button"
        android:fontFamily="@font/sourcesanspro_regular"
        app:backgroundTint="#F2F3D9"
        android:text="what are your\ngoals for today?"
        android:textSize="20sp"
        android:paddingRight="20dp"
        android:textAlignment="textEnd"
        android:textColor="#4A5759"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mood_button"
        android:textAllCaps="false"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/meditate_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/menu_choice_button"
        android:fontFamily="@font/sourcesanspro_regular"
        app:backgroundTint="#F2F3D9"
        android:text="let's start\nmeditation here"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:textAlignment="textStart"
        android:textColor="#4A5759"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mood_button"
        android:textAllCaps="false"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/progress_button"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/menu_choice_button"
        android:fontFamily="@font/sourcesanspro_regular"
        app:backgroundTint="#F2F3D9"
        android:text="track your\nsummary here"
        android:textSize="20sp"
        android:paddingRight="20dp"
        android:textAlignment="textEnd"
        android:textColor="#4A5759"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mood_button"
        android:textAllCaps="false"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/nav_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="12dp"
        android:background="#00FFFFFF"
        android:src="@drawable/nav_home"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/nav_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:background="#00FFFFFF"
        android:src="@drawable/nav_settings"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_progress"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/nav_about_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:background="#00FFFFFF"
        android:src="@drawable/nav_info"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_home"
        app:layout_constraintStart_toStartOf="@+id/nav_home"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/nav_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:background="#00FFFFFF"
        android:src="@drawable/nav_stats"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_about_mood"
        app:layout_constraintStart_toStartOf="@+id/nav_home"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />





</androidx.constraintlayout.widget.ConstraintLayout>