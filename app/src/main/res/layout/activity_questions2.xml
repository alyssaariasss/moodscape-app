<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/question2_where"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Where are you right now?"
        android:textColor="#4A5759"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question2_tagline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:text="At home? school? ..."
        android:textColor="#4A5759"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/question2_where"
        app:layout_constraintTop_toTopOf="@+id/question2_where" />

    <EditText
        android:id="@+id/question2_1"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"

        android:background="@drawable/round_btn4"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="3"
        android:overScrollMode="always"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="0dp"
        android:hint="Write your answers here..."
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/question2_tagline1" />

    <TextView
        android:id="@+id/question2_who"
        android:layout_width="307dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="274dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Who are you with?"
        android:textColor="#4A5759"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question2_tagline2"
        android:layout_width="162dp"
        android:layout_height="26dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:text="Family? Friends? ..."
        android:textColor="#4A5759"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/question2_who"
        app:layout_constraintTop_toTopOf="@+id/question2_who" />

    <EditText
        android:id="@+id/question2_2"
        android:layout_width="360dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/round_btn4"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="3"
        android:overScrollMode="always"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="0dp"
        android:hint="Write your answers here..."
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/question2_tagline2" />


    <Button
        android:id="@+id/nextbtn2"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:background="@drawable/round_btn3"
        android:elevation="5dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:gravity="center_horizontal|center_vertical"
        android:paddingTop="0dp"
        android:stateListAnimator="@null"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/dark_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backbtn2"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/backbtn2"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="177dp"
        android:background="@drawable/round_btn3"
        android:elevation="5dp"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:gravity="center_horizontal|center_vertical"
        android:paddingTop="2dp"
        android:stateListAnimator="@null"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/canary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question2_2"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>