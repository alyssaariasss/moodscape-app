<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/question3_what"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="What did you do today?"
                android:textColor="#4A5759"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/question3_tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="You can tell everything even if you think you haven't accomplished anything."
                android:textColor="#4A5759"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/question3_what"
                app:layout_constraintTop_toBottomOf="@+id/question3_what" />


            <EditText
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_btn3"
                android:backgroundTint="@color/light_gray"
                android:ems="10"
                android:gravity="top"
                android:hint="Write your thoughts here..."
                android:inputType="textMultiLine"
                android:lineSpacingExtra="8sp"
                android:lines="12"
                android:overScrollMode="always"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question3_tagline" />

            <LinearLayout
                android:id="@+id/q3Linear"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question3">

                <Button
                    android:id="@+id/backbtn3"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_btn3"
                    android:elevation="5dp"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:stateListAnimator="@null"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    app:backgroundTint="@color/canary" />


                <Button
                    android:id="@+id/nextbtn3"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_btn3"
                    android:elevation="5dp"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:stateListAnimator="@null"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    app:backgroundTint="@color/dark_pink" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/q3Linear"
                app:layout_constraintBottom_toBottomOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>